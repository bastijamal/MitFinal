@using SondanaSon.ViewModels.Account
@model RegisterVm


<section class="vh-100 bg-image"
         style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Create an account</h2>

                            <form method="post">

                                <div data-mdb-input-init class="form-outline mb-4">
                                    <input type="text" asp-for="Name" class="form-control form-control-lg" />
                                    <label asp-for="Name">Your Name</label>
                                </div>
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <input type="text" asp-for="Surname" class="form-control form-control-lg" />
                                    <label asp-for="Surname" for="form3Example1cg">Your SurName</label>
                                </div>

                                <div data-mdb-input-init class="form-outline mb-4">
                                    <input type="text" asp-for="UserName" class="form-control form-control-lg" />
                                    <label asp-for="UserName" for="form3Example1cg">Your UserName</label>
                                </div>

                                <div data-mdb-input-init class="form-outline mb-4">
                                    <input type="email" asp-for="Email" class="form-control form-control-lg" />
                                    <label asp-for="Email" for="form3Example3cg">Your Email</label>
                                </div>

                                <div data-mdb-input-init class="form-outline mb-4">
                                    <input type="password" asp-for="Password" class="form-control form-control-lg" />
                                    <label asp-for="Password" for="form3Example4cg">Password</label>
                                </div>

                                <div data-mdb-input-init class="form-outline mb-4">
                                    <input type="password" asp-for="ConfirmPassword" class="form-control form-control-lg" />
                                    <label asp-for="ConfirmPassword" for="form3Example4cdg">Repeat your password</label>
                                </div>

                                <div class="form-check d-flex justify-content-center mb-5">
                                    <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3cg" />
                                    <label class="form-check-label" for="form2Example3g">
                                        I agree all statements in <a href="#!" class="text-body"><u>Terms of service</u></a>
                                    </label>
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button type="submit" data-mdb-button-init
                                            data-mdb-ripple-init class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">
                                        Register
                                    </button>
                                </div>

                                <div asp-validation-summary="All" class="text-danger"></div>

                                <p class="text-center text-muted mt-5 mb-0">
                                    Have already an account? <a href="#!"
                                                                class="fw-bold text-body"><u>Login here</u></a>
                                </p>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>