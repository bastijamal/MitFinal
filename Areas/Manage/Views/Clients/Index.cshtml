@model List<Clients>

@{
    var count = 0;
}

<div class="container">
    <h1>Clients</h1>
    <a class="btn btn-primary" asp-action="Create">Create</a>


    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Position</th>
                <th scope="col">Photo</th>
                <th scope="col">Actions</th>

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Position</td>
                    <td>
                        <div style="width:100px">
                            <img width="100%" src="~/upload/clients/@item.ImgFile" />
                        </div>
                    </td>
                    <td>
                        <a class="btn btn-secondary" asp-action="Update" asp-route="@item.Id">Update</a>
                        <a class="btn btn-danger" asp-action="Remove" asp-route="@item.Id">Remove</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>





